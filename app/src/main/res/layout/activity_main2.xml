<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Main2Activity"
    android:background="@drawable/bg_2">

    <Button
        android:id="@+id/closeBtn"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginRight="155sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/ic_close_black_24dp"
        android:onClick="closeBtnClick" />

    <TextView
        android:id="@+id/songName"
        android:text="songName"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:layout_width="250sp"
        android:layout_height="30sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:src="@drawable/musicapp_bg" />

    <SeekBar
        android:id="@+id/positionBar"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/elapsedTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:text="0:11" />

        <TextView
            android:id="@+id/remainingTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240sp"
            android:text="-1:49" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/previousBtn"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginLeft="100sp"
            android:layout_marginRight="100sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/ic_skip_previous_black_24dp"
            android:onClick="previousBtnClick"/>

        <Button
            android:id="@+id/playBtn"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginLeft="-66sp"
            android:layout_marginRight="6sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/ic_play_arrow_black_24dp"
            android:onClick="playBtnClick" />

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/ic_skip_next_black_24dp"
            android:onClick="nextBtnClick"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18sp"
            android:layout_height="18sp"
            android:background="@drawable/ic_volume_mute_black_24dp" />

        <SeekBar
            android:id="@+id/volumeBar"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50" />

        <ImageView
            android:layout_width="26sp"
            android:layout_height="26sp"
            android:background="@drawable/ic_volume_down_black_24dp" />
    </LinearLayout>

</LinearLayout>